#!/usr/bin/env bash

set -euo pipefail

# Fetch all release tags from GitHub
releases_url="https://api.github.com/repos/raskell-io/hx/releases"

# Get versions, strip 'v' prefix, sort by semver
curl -sL "$releases_url" \
  | grep -oE '"tag_name": "v[^"]+"' \
  | sed 's/"tag_name": "v//;s/"//' \
  | sort -t. -k1,1n -k2,2n -k3,3n \
  | tr '\n' ' '

echo ""
